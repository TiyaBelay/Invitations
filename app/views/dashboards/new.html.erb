<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
  <header class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <ul class="nav navbar-nav navbar-left">
          <li> Your Dashboard </li>
        </ul>
      </div>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li><%= link_to "My Account", edit_user_registration_path, :class => "btn btn-dark navbar-btn" %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => "btn btn-dark navbar-btn" %></li>
        <% else %>
            <li><%= link_to "Sign In", new_user_session_path, :class => "btn btn-dark navbar-btn" %></li>
            <li><%= link_to "Register", new_user_registration_path, :class => "btn btn-dark navbar-btn" %></li>
        <% end %>
      </ul>
    </div>
  </header>

  <div>
    <%=bootstrap_form_for @event do |f| %>
      <div>
        <%= f.form_group :event_type, label: { text: 'Event Type' } do %>
          <%= f.radio_button :event_type, 'wedding', label: 'Wedding' %>
          <%= f.radio_button :event_type, 'other', label: 'Other' %>
        <% end %>
      </div>
      <div>
        <%= f.text_field :partner1_first_name, label: 'Partner 1 First Name'  %>
        <%= f.text_field :partner1_last_name, label: 'Partner 1 Last Name' %>
      </div>

      <div>
        <%= f.text_field :partner2_first_name, label: 'Partner 2 First Name' %>
        <%= f.text_field :partner2_last_name, label: 'Partner 2 Last Name' %>
      </div>

      <div>
        <%= f.date_field :due_date, label: 'Due Date' %>
      </div>

      <div>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</body>
</html>
